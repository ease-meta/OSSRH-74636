<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!--父工程-->
    <parent>
        <groupId>com.open.cloud</groupId>
        <artifactId>cloud-dependencies</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>./cloud-dependencies/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.open.cloud</groupId>
    <artifactId>open-cloud-platform</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <dependencies>
        <!--lombok 简化代码 -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>2.1.6.RELEASE</version>
                <configuration>
                    <fork>true</fork> <!-- 如果没有该配置，devtools不会生效 -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.1.1</version>
            </plugin>
        </plugins>
        <finalName>${artifactId}</finalName>
    </build>

    <modules>
        <module>cloud-base-java</module>
        <module>cloud-monitor-center</module>
        <module>cloud-business-center</module>
        <module>cloud-zipkin-center</module>
        <module>cloud-test</module>
        <module>cloud-common</module>
        <module>cloud-nacos</module>
        <module>cloud-sofa</module>
        <module>cloud-elasticsearch</module>
        <module>cloud-batch</module>
        <module>cloud-oauth</module>
        <module>cloud-inner-intergration</module>
        <module>cloud-tuning-center</module>
        <module>cloud-web-portal</module>
        <module>cloud-dependencies</module>
        <module>cloud-dubbo</module>
        <module>cloud-framework</module>
        <module>cloud-eureka</module>
        <module>cloud-mq-center</module>
        <module>cloud-web-common</module>
    </modules>


</project>