<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <!-- 打包的类型，如果有N个，将会打N个类型的包 -->
    <formats>
        <!--        <format>tar.gz</format>-->
        <format>zip</format>
    </formats>
    <id>${project.version}</id>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!--
            0755->即用户具有读/写/执行权限，组用户和其它用户具有读写权限；
            0644->即用户具有读写权限，组用户和其它用户具有只读权限；
        -->
        <!-- 将src/bin目录下的所有文件输出到打包后的bin目录中 -->
        <fileSet>
            <directory>${basedir}/src/main/scripts/</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <directoryMode>0775</directoryMode>
        </fileSet>

        <!-- 将项目启动jar打包到跟目录中 -->
        <fileSet>
            <directory>${build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
            <directoryMode>0775</directoryMode>
        </fileSet>
        <!-- 将第三方依赖打包到lib目录中 -->
        <fileSet>
            <directory>${build.directory}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0775</directoryMode>
        </fileSet>

        <!-- 指定输出target/classes中的配置文件到config目录中 -->
        <fileSet>
            <directory>${build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <!-- rescourse目录下的config -->
                <include>/gravity/**</include>
            </includes>
            <fileMode>0644</fileMode>
            <directoryMode>0775</directoryMode>
        </fileSet>

        <!-- <fileSet>
             <directory>${project.basedir}/../../luna-profiles/</directory>
             <outputDirectory>/</outputDirectory>
             <includes>
                 &lt;!&ndash; rescourse目录下的config &ndash;&gt;
                 <include>/gravity/**</include>
             </includes>
             <fileMode>0644</fileMode>
             <directoryMode>0775</directoryMode>
         </fileSet>-->

        <fileSet>
            <directory>${build.outputDirectory}</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <!-- rescourse目录下的config -->
                <include>/config/*</include>
                <!-- rescourse目录下的yml -->
                <include>*.yml</include>
                <!-- rescourse目录下的xml -->
                <include>*.xml</include>
                <!-- rescourse目录下的txt -->
                <include>*.txt</include>
                <!-- rescourse目录下的properties -->
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
            <directoryMode>0775</directoryMode>
        </fileSet>


        <!-- 包含根目录下的文件 -->
        <!--        <fileSet>-->
        <!--            <directory>${basedir}</directory>-->
        <!--            <includes>-->
        <!--                <include>NOTICE</include>-->
        <!--                <include>LICENSE</include>-->
        <!--                <include>*.md</include>-->
        <!--            </includes>-->
        <!--        </fileSet>-->
    </fileSets>

</assembly>