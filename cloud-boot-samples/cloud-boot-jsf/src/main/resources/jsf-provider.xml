<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jsf="http://jsf.jd.com/schema/jsf"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://jsf.jd.com/schema/jsf http://jsf.jd.com/schema/jsf/jsf.xsd">
    <!-- 实现类 -->
    <bean id="helloServiceImpl" class="com.open.cloud.jsf.service.HelloServiceImpl"/>
    <!-- 注册中心： 配置 index 服务地址，使用 index 服务寻址注册中心地址 -->
    <!--<jsf:registry id="jsfRegistry" protocol="jsfRegistry" index="i.jsf.jd.com"/>-->
    <jsf:registry id="jsfRegistry" protocol="fileRegistry" file="/app/dcits/jsf/" index="i.jsf.jd.com"/>

    <!-- 服务端 -->
    <jsf:server id="jsf" protocol="jsf" acceptSerializations="hessian" serialization="hessian"/>

    <!-- 发布服务 alias 可以改成自己的 -->
    <jsf:provider id="helloService" interface="com.open.cloud.jsf.api.IHelloService"
                  alias="CHANGE-IT" ref="helloServiceImpl" server="jsf" delay="0" subscribe="true">
    </jsf:provider>
</beans>