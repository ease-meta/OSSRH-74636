<?xml version="1.0" encoding="UTF-8"?>
<!-- scan 配置文件如果发生改变，将会被重新加载  scanPeriod 检测间隔时间-->
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- 获取appliction.yml中的参数配置 -->
    <springProperty scope="context" name="logName" source="spring.application.name"/>

    <contextName>${logName}-log</contextName>
    <!--根目录-->
    <property scope="context" name="LOG_HOME" value="log/"/>
    <!--服务的名称-->
    <property scope="context" name="LOG_NAME" value="${logName}"/>
    <!--设置日志格式-->
    <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度 %logger class的全名 %msg：日志消息，%n是换行符-->
    <property scope="context" name="LOG_MSG"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger Line:%-3L - %msg%n"/>
    <!-- 单个文件大于30MB，设置当日志文件达到此阈值即可自动生成新的日志文件，单位可以是KB，MB，GB，默认单位是KB -->
    <property scope="context" name="LOG_MaxFileSize" value="30MB"/>
    <!-- 最大保存时间：180天-->
    <property scope="context" name="LOG_MaxHistory" value="180"/>
    <!--添加logback的配置  -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 控制控制台打印的日志  默认拦截所有级别日志 避免控制台打印多次日志信息 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>All</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${LOG_MSG}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>
    <!--自定义包日志消息输出-->
    <logger name="org.springframework.web" level="INFO" additivity="true"/>
    <!--根logger设置-->
    <!--<root level="INFO">-->
    <!--<appender-ref ref="CONSOLE" />-->
    <!--</root>-->

    <!-- 测试环境+开发环境. 多个使用逗号隔开. -->
    <springProfile name="test,dev">
        <property scope="context" name="LOG_ADDITIVE" value="true"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <!-- 生产环境. -->
    <springProfile name="prod">
        <property scope="context" name="LOG_ADDITIVE" value="false"/>
        <root level="ERROR">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>