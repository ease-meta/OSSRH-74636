[
  {
    "name": "Path",
    "comment": "按路径匹配",
    "args": [
      {
        "name": "pattern",
        "placeholder": "/oms-web/**",
        "comment": "按路径匹配，支持正则",
        "type": "text",
        "eg": "/对应路径(匹配该路径下的所有请求,星号必须在/后面)/**"
      }
    ]
  },
  {
    "name": "Before",
    "comment": "匹配指定时间之前",
    "args": [
      {
        "name": "datetime",
        "placeholder": "2018-12-12T11:14:03.820+08:00[Asia/Shanghai]",
        "type": "date",
        "comment": "匹配在此时间之前的的请求",
        "eg": "yyyy-MM-ddThh:mm:ss.fffZ"
      }
    ]
  },
  {
    "name": "After",
    "comment": "匹配指定时间之后",
    "args": [
      {
        "name": "datetime",
        "placeholder": "2018-12-12T11:14:03.820+08:00[Asia/Shanghai]",
        "type": "date",
        "comment": "匹配在此时间之后的的请求",
        "eg": "yyyy-MM-ddThh:mm:ss.fffZ"
      }
    ]
  },
  {
    "name": "Between",
    "comment": "匹配指定时间之间",
    "args": [
      {
        "name": "datetime1",
        "placeholder": "2018-12-12T11:14:03.820+08:00[Asia/Shanghai]",
        "comment": "匹配在此时间之后的的请求",
        "type": "date",
        "eg": "yyyy-MM-ddThh:mm:ss.fffZ"
      },
      {
        "name": "datetime2",
        "placeholder": "2018-12-12T11:14:03.820+08:00[Asia/Shanghai]",
        "type": "date",
        "comment": "匹配在此时间之前的的请求",
        "eg": "yyyy-MM-ddThh:mm:ss.fffZ"
      }
    ]
  },
  {
    "name": "Header",
    "comment": "根据请求头匹配",
    "args": [
      {
        "name": "header",
        "placeholder": "version",
        "comment": "在header中的key值",
        "type": "text",
        "eg": "key"
      },
      {
        "name": "regexp",
        "placeholder": "V1.0",
        "comment": "header中对应的value,支持正则表达式",
        "type": "text",
        "eg": "value"
      }
    ]
  },
  {
    "name": "Host",
    "comment": "根据host地址匹配",
    "args": [
      {
        "name": "pattern",
        "placeholder": "192.168.1.*",
        "comment": "发送请求的Host地址,支持正则",
        "type": "text",
        "eg": "要匹配的Host ip地址"
      }
    ]
  },
  {
    "name": "Method",
    "comment": "根据请求方法匹配",
    "args": [
      {
        "name": "method",
        "placeholder": "Get",
        "comment": "按请求方法类型进行匹配",
        "type": "text",
        "eg": "Get|Post|Delete等"
      }
    ]
  },
  {
    "name": "Cookie",
    "comment": "根据Cookie匹配",
    "args": [
      {
        "name": "name",
        "placeholder": "user-name",
        "comment": "Cookie中的key值",
        "type": "text",
        "eg": ""
      },
      {
        "name": "regexp",
        "placeholder": "admin",
        "comment": "Cookie中的value值",
        "type": "text",
        "eg": ""
      }
    ]
  },
  {
    "name": "Weight",
    "comment": "根据权重匹配",
    "args": [
      {
        "name": "weight.group",
        "placeholder": "groupId",
        "comment": "配置路由的组名",
        "type": "text",
        "eg": ""
      },
      {
        "name": "weight.weight",
        "placeholder": "weight",
        "comment": "路由权重",
        "type": "number",
        "eg": ""
      }
    ]
  },
  {
    "name": "RemoteAddr",
    "comment": "根据远程ip地址匹配",
    "args": [
      {
        "name": "sources",
        "placeholder": "127.0.0.1/24",
        "comment": "配置路由的组名",
        "type": "text",
        "eg": ""
      }
    ]
  }
]